{
  "name": "react-countdown",
  "version": "3.0.0-beta",
  "description": "A customizable countdown component for React.",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ndresx/react-countdown.git"
  },
  "author": "Martin Veith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ndresx/react-countdown/issues"
  },
  "homepage": "https://github.com/ndresx/react-countdown",
  "keywords": [
    "react",
    "typescript",
    "countdown",
    "component",
    "hook"
  ],
  "scripts": {
    "build": "yarn build:clean && yarn rollup --config",
    "build:clean": "rm -rf ./dist && yarn test:e2e:clean && mkdir dist",
    "build:watch": "yarn build --watch",
    "clean": "rm -rf ./node_modules && rm -rf ./coverage && yarn build:clean",
    "eslint": "eslint ./src/**/*.{ts,tsx} --quiet",
    "eslint:fix": "yarn eslint --fix",
    "lint": "yarn lint:eslint && yarn lint:tsc",
    "lint:eslint": "yarn eslint",
    "lint:prettier": "yarn prettier",
    "lint:tsc": "tsc --noEmit",
    "prettier": "prettier --list-different ./src/**/*.{ts,tsx}",
    "prettier:fix": "prettier --write ./src/**/*.{ts,tsx}",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "yarn build && yarn start-server-and-test test:e2e:server http://localhost:1234 \"cypress run\"",
    "test:e2e:clean": "rm -rf ./e2e/dist",
    "test:e2e:dev": "yarn start-server-and-test test:e2e:server http://localhost:1234 \"cypress open\"",
    "test:e2e:server": "parcel ./e2e/index.html --out-dir ./e2e/dist",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/enzyme-to-json": "^1.5.3",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/testing-library__react-hooks": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "coveralls": "^3.0.9",
    "cypress": "^5.4.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "jest": "^26.5.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.1.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-test-renderer": "^16.14.0",
    "rollup": "^2.31.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-typescript2": "^0.27.3",
    "start-server-and-test": "^1.11.5",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "react": ">= 16.8",
    "react-dom": ">= 16.8"
  }
}
